<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".joinTeam">

    <EditText
        android:id="@+id/joinTeam_editText"
        android:layout_width="184dp"
        android:layout_height="64dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/rec_box"
        android:ems="8"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="@string/joinTeam_editText_text"
        android:textColor="#97717171"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoView" />

    <Button
        android:id="@+id/joinTeam_quickJoinButton"
        android:layout_width="154dp"
        android:layout_height="59dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/btn_bg"
        android:onClick="quickJoin"
        android:text="@string/joinTeam_quickJoinButton_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/joinTeam_editText" />

    <TextView
        android:id="@+id/logoView"
        android:layout_width="136dp"
        android:layout_height="135dp"
        android:layout_marginTop="152dp"
        android:gravity="center"
        android:text="Logo"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>