<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.taizhongoldtownguideapp">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SurroundingView"
            android:label="3D環景"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".NewsInfo"
            android:label="最新消息"
            android:parentActivityName=".NewsList" />
        <activity
            android:name=".NewsList"
            android:label="最新消息"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ChangeMarkerIcon"
            android:label="选择标记"
            android:parentActivityName=".CreateNewMarker" />
        <activity
            android:name=".ChangeUserIcon"
            android:label="选择头框"
            android:parentActivityName=".CreateNewUser" />
        <activity
            android:name=".CreateNewUser"
            android:label="新成员加入"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CreateNewMarker"
            android:label="新增标记"
            android:parentActivityName=".TeamTracker" />
        <activity
            android:name=".TeamEntry"
            android:label="参团方式"
            android:parentActivityName=".CreateNewUser" />
        <activity
            android:name=".JoinTeam"
            android:label="快速加入团队"
            android:parentActivityName=".TeamEntry" />
        <!--
             The API key for Google Maps-based APIs is defined as a string resource.
             (See the file "res/values/google_maps_api.xml").
             Note that the API key is linked to the encryption key used to sign the APK.
             You need a different API key for each encryption key, including the release key that is used to
             sign the APK for publishing.
             You can define the keys for the debug and release targets in src/debug/ and src/release/.
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".TeamTracker"
            android:label="我的团队"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>