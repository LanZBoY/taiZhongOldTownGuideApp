<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_solid">

    <TextView
        android:id="@+id/check_in_background"
        android:layout_width="350dp"
        android:layout_height="580dp"
        android:background="@drawable/rectangle_solid"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/check_in_oncompleted_title"
        android:layout_width="0dp"
        android:layout_height="27dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/CheckHint"
        android:textSize="20sp"
        app:autoSizeMaxTextSize="34sp"
        app:autoSizeMinTextSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/check_in_background"
        app:layout_constraintStart_toStartOf="@+id/check_in_background"
        app:layout_constraintTop_toTopOf="@+id/check_in_background" />

    <Button
        android:id="@+id/check_in_oncomplete_done_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/info_window_background"
        android:text="@string/Done"
        app:layout_constraintBottom_toBottomOf="@+id/check_in_background"
        app:layout_constraintEnd_toEndOf="@+id/check_in_background"
        app:layout_constraintStart_toStartOf="@+id/check_in_background" />

    <TextView
        android:id="@+id/check_in_oncomplete_desc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="@string/CheckDesc"
        android:textSize="8sp"
        app:autoSizeMaxTextSize="14sp"
        app:autoSizeMinTextSize="6sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/check_In_ImageView"
        app:layout_constraintEnd_toEndOf="@+id/check_in_background"
        app:layout_constraintStart_toStartOf="@+id/check_in_background"
        app:layout_constraintTop_toBottomOf="@+id/check_in_oncompleted_title" />

    <ImageView
        android:id="@+id/check_In_ImageView"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/check_in_oncomplete_done_button"
        app:layout_constraintEnd_toEndOf="@+id/check_in_background"
        app:layout_constraintStart_toStartOf="@+id/check_in_background"
        app:srcCompat="@android:drawable/ic_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>