<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rectangle_solid"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/check_in_record_pop_up_win"
    >


    <TextView
        android:id="@+id/check_in_oncomplete_background"
        android:layout_width="350dp"
        android:layout_height="586dp"
        android:background="@drawable/rectangle_solid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/check_in_record_pop_up_win_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/CheckProcessTitle"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/check_in_oncomplete_background"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/check_in_oncomplete_background"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/check_in_record_pop_up_win_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginTop="28dp"
        android:indeterminateOnly="false"
        android:progress="50"
        android:progressDrawable="@drawable/progresser_ring"
        app:layout_constraintEnd_toEndOf="@+id/check_in_oncomplete_background"
        app:layout_constraintStart_toStartOf="@+id/check_in_oncomplete_background"
        app:layout_constraintTop_toBottomOf="@+id/check_in_record_pop_up_win_title" />

    <ImageView
        android:id="@+id/flagImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/check_in_record_pop_up_win_progressBar"
        app:layout_constraintEnd_toEndOf="@+id/check_in_record_pop_up_win_progressBar"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="@+id/check_in_record_pop_up_win_progressBar"
        app:layout_constraintTop_toTopOf="@+id/check_in_record_pop_up_win_progressBar"
        app:layout_constraintVertical_bias="0.506"
        app:srcCompat="@drawable/marker" />

    <TextView
        android:id="@+id/check_in_record_pop_up_win_completed_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ProcessDesc"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="@+id/check_in_oncomplete_background"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/check_in_oncomplete_background"
        app:layout_constraintTop_toBottomOf="@+id/check_in_record_pop_up_win_progressBar" />

    <TextView
        android:id="@+id/check_in_record_pop_up_win_completed_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/Title"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="@+id/check_in_oncomplete_background"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/check_in_oncomplete_background"
        app:layout_constraintTop_toBottomOf="@+id/check_in_record_pop_up_win_completed_textView" />

    <Button
        android:id="@+id/check_in_record_pop_up_win_cancel_button"
        android:layout_width="144dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_bg"
        android:text="@string/Exit"
        app:layout_constraintEnd_toEndOf="@+id/check_in_oncomplete_background"
        app:layout_constraintStart_toStartOf="@+id/check_in_oncomplete_background"
        app:layout_constraintTop_toBottomOf="@+id/check_in_record_pop_up_win_completed_title_textView" />

    <Button
        android:id="@+id/check_in_record_pop_up_win_completed_close_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/cross_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>