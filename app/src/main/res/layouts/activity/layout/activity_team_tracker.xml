<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/whereIsMyFriend_location_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/location_icon"
        android:padding="8dp"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/whereIsMyFriend_person_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/person_icon"
        android:padding="8dp"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/layer_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="163dp"
        android:background="@drawable/layer_btn" />

    <Button
        android:id="@+id/checkIn_record_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="160dp"
        android:background="@drawable/list" />

    <Button
        android:id="@+id/checkInBotton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/check_in_record_icon" />

    <TextView
        android:id="@+id/checkDistanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="距離初始化中..." />

</RelativeLayout>