<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckInRecord">

    <TextView
        android:id="@+id/checkIn_record_progressBar_background"
        android:layout_width="303dp"
        android:layout_height="355dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/checkIn_record_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:indeterminateOnly="false"
        android:progress="50"
        android:progressDrawable="@drawable/progresser_ring"
        app:layout_constraintBottom_toBottomOf="@+id/checkIn_record_progressBar_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/checkIn_record_progressBar_background"
        app:layout_constraintVertical_bias="0.27" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/checkIn_record_progressBar"
        app:layout_constraintEnd_toEndOf="@+id/checkIn_record_progressBar"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="@+id/checkIn_record_progressBar"
        app:layout_constraintTop_toTopOf="@+id/checkIn_record_progressBar"
        app:layout_constraintVertical_bias="0.518"
        app:srcCompat="@drawable/marker" />

    <TextView
        android:id="@+id/checkIn_record_completed_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已完成 2/4"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkIn_record_progressBar" />

    <TextView
        android:id="@+id/checkIn_record_next_stop_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="52dp"
        android:text="下一站"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkIn_record_completed_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>